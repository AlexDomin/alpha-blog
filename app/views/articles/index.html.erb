<div id = "page-content">
  <h1 class = "text-center">Showing all Articles</h1>
  <h2 class = "text-center"><%= link_to 'Create new article', new_article_path, class: "btn btn-light" %></h2>
  <% @articles.each do |a| %>
  <div class = "row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            by Alex Domin
          </div>
          <div class="card-body">
            <h5 class="card-title">Special title treatment</h5>
            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
          </div>
          <div class="card-footer text-muted">
            2 days ago
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |a| %>
        <tr>
          <td><%= a.title %></td>
          <td><%= a.description %></td>
          <td><%= link_to 'Show', article_path(a) %></td>
          <td><%= link_to 'Edit', edit_article_path(a) %></td>
          <td><%= link_to 'Delete', article_path(a), method: :delete, data: { confirm: "Are you sure you want to delete this article?" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <p><%= link_to 'Create new article', new_article_path %></p>
  <p>
    <%= link_to 'Home', root_path %> |
    <%= link_to 'About', about_path %>
  </p>
</div>