<h1 class = "text-center text-shadow mt-3">LISTING ALL ARTICLES</h1>
<h2 class = "text-center"><%= link_to 'Create new article', new_article_path, class: "btn btn-light shadow bg-white rounded text-secondary", id: "card-background"%></h2>
<% @articles.each do |article| %>
<div class = "row justify-content-center">
  <div class="col-8 mt-3 mb-4">
    <div class="card text-center">
      <div class="card text-center shadow bg-white rounded">
        <div class="card-header shadow bg-white rounded font-italic">
          by unknown
        </div>
        <div class="card-body card-background">
          <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
          <p class="card-text"><%= truncate(article.description, length: 100) %></p>
          <%= link_to "View", article_path(article), class: "btn btn-outline-success button-margin" %>
          <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-info button-margin" %>
          <%= link_to "Delete", article_path(article), class: "btn btn-outline-danger button-margin", method: :delete, data: {confirm: "Are you sure?"} %>
        </div>
        <div class="card-footer shadow bg-white rounded text-muted">
          <small>Created <%= time_ago_in_words(article.created_at) %> ago,
          edited <%= time_ago_in_words(article.updated_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
