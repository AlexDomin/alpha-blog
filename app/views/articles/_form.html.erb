<% if @article.errors.any? %>
  <h2>The following errors prevented the article from being saved:</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @article, local: true) do |f| %>
  <div class = "form-group">
    <%= f.label :title, class: "form-control" %>
    <div class = "col-10">
      <%= f.text_field :title, class: "form-conrol", placeholder: "Enter Title Here" %>
    </div>
  </div>

  <div class = "form-group">
    <%= f.label :description, class: "form-control" %>
    <%= f.text_area :description, rows: 6, placeholder: "Enter Descirption Here" %>
  </div>

  <p>
    <%= f.submit %>
  </p>
<% end %>