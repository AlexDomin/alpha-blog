<h1 class = "text-center text-shadow mt-3">Log in</h1>
<div class="container"> 
  <div class = "row justify-content-center">
    <div class = "col-10">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 rounded", id: "form-style", local: true) do |f| %>

        <div class = "form-group">
          <%= f.label :email, class: "col-form-label" %>
          <div>
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your Email" %>
          </div>
        </div>

        <div class = "form-group">
          <%= f.label :password, class: "col-form-label" %>
          <div>
            <%= f.password_field :password, class: "form-control shadow rounded", rows: 10, placeholder: "Enter your Password" %>
          </div>
        </div>

        <div class = "form-group">
          <%= f.submit "Log in", class: "btn btn-secondary float-right" %>
        </div>
      <% end %>
    </div>
    
    <div class="mb-3">
      <% if params[:action] == "edit" %>
        <%= link_to '[ Cancel and return to user profile ]', user_path, class: "text-dark mb-3" %>
      <% else %>
        <%= link_to '[ Cancel and view articles listing ]', articles_path, class: "text-dark mb-3" %>
      <% end %>
    </div>
  </div>
</div>