<h1 class = "text-center text-shadow mt-3"><%= @user.username %>'s profile</h1>

<%= gravatar_for @user, size: 200 %>

<div class = "text-center mt-4">
  <%= link_to "Edit your profile", edit_user_path, class: "btn btn-info button-margin" %>
</div>

<h3 class = "text-center text-shadow mt-3">Contributions</h3>

<%= render 'articles/article', obj: @user.articles %>

<div class = "text-center mb-3">
  <%= link_to '[ View all bloggers ]', users_path, class: "text-secondary" %>
  <%= link_to '[ View all articles ]', articles_path, class: "text-secondary" %>
</div>