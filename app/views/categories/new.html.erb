<h1 class = "text-center text-shadow mt-3">Create a New Category</h1>
<div class="container"> 
  <div class = "row justify-content-center">
    <div class = "col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 rounded", id: "form-style", local: true) do |f| %>
        <div class = "form-group">
          <%= f.label :name, "Category Name", class: "col-form-label" %>
          <div>
            <%= f.text_field :name, class: "form-conrol col-12", placeholder: "Enter Category" %>
          </div>
        </div>

        <div class = "form-group">
          <%= f.submit "Create Category", class: "btn btn-secondary float-right" %>
        </div>
      <% end %>
    </div>
    
    <div class="mb-3">
      <%= link_to '[ Cancel and view articles listing ]', articles_path, class: "text-dark mb-3" %>
    </div>
  </div>
</div>