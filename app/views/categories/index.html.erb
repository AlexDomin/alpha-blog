<h1 class = "text-center text-shadow mt-3">Categories</h1>

<div class="apple_pagination">
  <%= will_paginate @categories, :container => false %>
</div>

<% @categories.each do |category| %>
  <div class = "row justify-content-center mr-0">
    <div class="col-8 mt-3 mb-4">
      <div class="card text-center">
        <div class="card text-center shadow bg-white rounded">
          <div class="card-body card-background">
            <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-secondary" %></h5>
            <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
          </div>
          <div class="card-footer shadow bg-white rounded text-muted">
            <small>Created <%= time_ago_in_words(category.created_at) %> ago,
            edited <%= time_ago_in_words(category.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="apple_pagination">
  <%= will_paginate @categories, :container => false %>
</div>
